---
// --- 修正後のデータベース取得処理 ---
let posts = [];
let error = null;

try {
  const db = (Astro.locals as any).runtime.env.DB;
  const { results } = await db.prepare("SELECT * FROM posts ORDER BY RANDOM() LIMIT 3").all();
  posts = results;
} catch (e: any) {
  error = e.message;
}

const devComment = `>> DEV_LOG_v1.0.4
--------------------------
Tap READ to see 3 random posts. I made this mainly to log my own dreams, but I'm curious about yours too, which doesn't mean you must write about them though. I only give this URL to people I personally like, but likewise, you can have one friend of yours here if you want. 
Anonymous, Minimal, Immutable.`;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="icon" type="image/png" href="https://github.com/user-attachments/assets/412aada4-e33d-4766-9f3e-a24dab07b310" />
    <link rel="apple-touch-icon" href="https://github.com/user-attachments/assets/412aada4-e33d-4766-9f3e-a24dab07b310" />
  
    <title>READ | nikki-1k</title>
    <style>
      body {
        background-color: #000;
        color: #00ff00;
        font-family: 'Courier New', Courier, monospace;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
      }
      h1 { font-size: 1.5rem; letter-spacing: 2px; }
      nav { margin-bottom: 40px; }
      nav a {
        color: #00ff00;
        text-decoration: none;
        margin: 0 15px;
        border: 1px solid #00ff00;
        padding: 5px 10px;
      }
      nav a:hover { background-color: #00ff00; color: #000; }

      .posts-container { width: 100%; max-width: 800px; flex: 1; }
      .post-card {
        border: 1px dashed #00ff00;
        padding: 20px;
        margin-bottom: 30px;
        white-space: pre-wrap;
      }
      .post-date { display: block; font-size: 0.8rem; margin-bottom: 10px; opacity: 0.7; }

      /* フッター & ポップアップ用スタイル */
      footer {
        margin-top: 60px;
        padding: 20px 0;
        width: 100%;
        max-width: 800px;
        border-top: 1px double #00ff00;
        text-align: center;
      }
      .dev-btn {
        background: none;
        border: none;
        color: #00ff00;
        font-family: inherit;
        font-size: 0.75rem;
        opacity: 0.4;
        cursor: pointer;
        transition: 0.3s;
      }
      .dev-btn:hover { opacity: 1; text-shadow: 0 0 8px #00ff00; }

      dialog {
        background: #000;
        color: #00ff00;
        border: 2px solid #00ff00;
        padding: 20px;
        max-width: 400px;
        box-shadow: 0 0 20px rgba(0, 255, 0, 0.2);
      }
      dialog::backdrop {
        background: rgba(0, 0, 0, 0.8);
      }
      .close-btn {
        display: block;
        margin-top: 20px;
        color: #00ff00;
        background: none;
        border: 1px solid #00ff00;
        cursor: pointer;
        font-family: inherit;
        width: 100%;
      }
      .close-btn:hover { background: #00ff00; color: #000; }
    </style>
  </head>
  <body>
    <h1>nikki-1K</h1> 

    <nav>
      <a href="/">READ</a>
      <a href="/mypage">WRITE</a>
    </nav>

    <div class="posts-container">
      {error && <p style="color: #ff0000;">Error: {error}</p>}
      
      {posts.length === 0 ? (
        <p class="empty-msg">No posts recorded yet...</p>
      ) : (
        posts.map((post) => (
          <div class="post-card">
            <span class="post-date">
              {new Date(post.created_at).toLocaleString('ja-JP', { timeZone: 'Asia/Tokyo' })}
            </span>
            <div class="post-content">{post.content}</div>
          </div>
        ))
      )}
    </div>

    <footer>
      <button id="openDialog" class="dev-btn">[SYSTEM_LOG: READ_DEV_COMMENTS]</button>
    </footer>

    <dialog id="devDialog">
      <p style="white-space: pre-wrap;">{devComment}</p>
      <button id="closeDialog" class="close-btn">CLOSE</button>
    </dialog>

    <script>
      const dialog = document.getElementById('devDialog') as HTMLDialogElement;
      const openBtn = document.getElementById('openDialog');
      const closeBtn = document.getElementById('closeDialog');

      openBtn?.addEventListener('click', () => dialog.showModal());
      closeBtn?.addEventListener('click', () => dialog.close());

      // 外側クリックで閉じる設定
      dialog.addEventListener('click', (e) => {
        if (e.target === dialog) dialog.close();
      });
    </script>
  </body>
</html>
