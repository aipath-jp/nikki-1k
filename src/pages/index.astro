---
// データベースから日記を取得する処理
let posts = [];
let error = null;

try {
  const db = (Astro.locals as any).runtime.env.DB;
  const { results } = await db.prepare("SELECT * FROM posts ORDER BY created_at DESC").all();
  posts = results;
} catch (e: any) {
  error = e.message;
}
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>INDEX | nikki-1k</title>
    <style>
      body {
        background-color: #000;
        color: #00ff00;
        font-family: 'Courier New', Courier, monospace;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
      }
      nav {
        margin-bottom: 40px;
      }
      nav a {
        color: #00ff00;
        text-decoration: none;
        margin: 0 15px;
        border: 1px solid #00ff00;
        padding: 5px 10px;
      }
      nav a:hover {
        background-color: #00ff00;
        color: #000;
      }
      .posts-container {
        width: 100%;
        max-width: 800px;
      }
      .post-card {
        border: 1px dashed #00ff00;
        padding: 20px;
        margin-bottom: 30px;
        white-space: pre-wrap; /* 改行をそのまま表示 */
        line-height: 1.6;
      }
      .post-date {
        font-size: 0.8rem;
        opacity: 0.7;
        margin-bottom: 10px;
        border-bottom: 1px solid #333;
        display: block;
      }
      .empty-msg {
        text-align: center;
        margin-top: 50px;
        font-style: italic;
      }
    </style>
  </head>
  <body>
    <nav>
      <a href="/">INDEX</a>
      <a href="/mypage">MY PAGE</a>
    </nav>

    <div class="posts-container">
      {error && <p style="color: red;">Error: {error}</p>}
      
      {posts.length === 0 ? (
        <p class="empty-msg">No thoughts recorded yet...</p>
      ) : (
        posts.map((post) => (
          <div class="post-card">
            <span class="post-date">{new Date(post.created_at).toLocaleString('ja-JP')}</span>
            <div class="post-content">{post.content}</div>
          </div>
        ))
      )}
    </div>
  </body>
</html>
