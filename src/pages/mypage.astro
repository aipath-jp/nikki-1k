---
// フロントエンドの設定
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MY PAGE | nikki-1k</title>
    <style>
      body {
        background-color: #000;
        color: #00ff00;
        font-family: 'Courier New', Courier, monospace;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
      }
      nav {
        margin-bottom: 40px;
      }
      nav a {
        color: #00ff00;
        text-decoration: none;
        margin: 0 15px;
        border: 1px solid #00ff00;
        padding: 5px 10px;
      }
      nav a:hover {
        background-color: #00ff00;
        color: #000;
      }
      .editor-container {
        width: 100%;
        max-width: 600px;
      }
      textarea {
        width: 100%;
        height: 300px;
        background-color: #000;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 15px;
        font-size: 1rem;
        font-family: inherit;
        resize: none;
        outline: none;
        box-sizing: border-box;
      }
      .controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
      }
      #char-count {
        font-size: 1rem;
      }
      /* 100文字未満の時に数字を赤くするスタイル */
      .short-text {
        color: #ff0000;
      }
      button {
        background-color: #000;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 10px 30px;
        font-size: 1.2rem;
        cursor: pointer;
        font-family: inherit;
      }
      button:hover {
        background-color: #00ff00;
        color: #000;
      }
      button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }
    </style>
  </head>
  <body>
    <nav>
      <a href="/">HOME</a>
      <a href="/mypage">MY PAGE</a>
    </nav>

    <div class="editor-container">
      <textarea id="diary-input" maxlength="1000" placeholder="100文字以上入力してください..."></textarea>
      <div class="controls">
        <div id="counter">
          <span id="char-count" class="short-text">0</span>/1000
        </div>
        <button id="post-btn">POST</button>
      </div>
    </div>

    <script>
      const textarea = document.getElementById("diary-input");
      const charCount = document.getElementById("char-count");
      const postBtn = document.getElementById("post-btn");

      // 文字数カウント & 色の変化
      textarea.addEventListener("input", () => {
        const length = textarea.value.length;
        charCount.textContent = length;
        
        // 100文字未満なら赤、以上なら緑にする
        if (length < 100) {
          charCount.classList.add("short-text");
        } else {
          charCount.classList.remove("short-text");
        }
      });

      // POSTボタンの処理
      postBtn.addEventListener("click", async () => {
        const content = textarea.value.trim();
        const length = content.length;

        // 【追加】100文字未満のバリデーション
        if (length < 100) {
          alert(`あと ${100 - length} 文字足りません。100文字以上書いてください。`);
          return;
        }

        postBtn.disabled = true;
        postBtn.textContent = "SENDING...";

        try {
          const response = await fetch("/api/posts", {
            method: "POST",
            body: JSON.stringify({ content }),
            headers: { "Content-Type": "application/json" }
          });

          if (response.ok) {
            alert("保存しました！");
            textarea.value = "";
            charCount.textContent = "0";
            charCount.classList.add("short-text");
          } else {
            const errorData = await response.json();
            alert("エラー: " + (errorData.error || "保存に失敗しました"));
          }
        } catch (e) {
          console.error(e);
          alert("通信エラーが発生しました。");
        } finally {
          postBtn.disabled = false;
          postBtn.textContent = "POST";
        }
      });
    </script>
  </body>
</html>
